<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="background">@drawable/dusk_background</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:dropDownHeight">50dp</item>
        <item name="android:background">#00000000</item>

    </style>

    <style name="width_matchparent_height_wrapcontent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="survey_card_view" parent="width_matchparent_height_wrapcontent">
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">#40ffffff</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_marginTop">@dimen/horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/vertical_margin</item>
    </style>

    <style name="survey_card_view_inverse" parent="width_matchparent_height_wrapcontent">
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">#60000000</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_marginTop">@dimen/horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/vertical_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="login_page_fields" parent="width_matchparent_height_wrapcontent">
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">#40ffffff</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="survey_card_linear_layout" parent="width_matchparent_height_wrapcontent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="survey_card_question_text_view" parent="width_matchparent_height_wrapcontent">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:layout_marginBottom">8dp</item>

    </style>

    <style name="survey_card_seekbar" parent="width_matchparent_height_wrapcontent">
        <item name="android:layout_gravity">center</item>
        <item name="android:max">5</item>
        <item name="android:min">1</item>
    </style>

    <style name="survey_card_answer_text_view" parent="width_matchparent_height_wrapcontent">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="login_text_views" parent="width_matchparent_height_wrapcontent">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="inverse_text_views" parent="width_matchparent_height_wrapcontent">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="inverse_page_header_text_views" parent="width_matchparent_height_wrapcontent">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttons" parent="width_matchparent_height_wrapcontent">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#5A8BBF</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">#ffffff</item>
    </style>
    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>
