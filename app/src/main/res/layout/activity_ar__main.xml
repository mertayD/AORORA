<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aorora.AR_Main">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/arFragment"
        android:name="com.example.aorora.CustomArFragment" />

    <TextView
        android:id="@+id/questText"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/Quests"
        android:layout_marginTop="15dp"
        android:background="#8D666666"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Single-line text view that scrolls automatically if the text is too long to fit in the widget"
        android:visibility="invisible"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/messageText"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/Message"
        android:layout_marginTop="115dp"
        android:background="#8D666666"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Single-line text view that scrolls automatically if the text is too long to fit in the widget"
        android:visibility="invisible"
        tools:visibility="invisible" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_alignParentEnd="true"
        android:text="Butterflies Left:"
        android:id="@+id/butterflyCntTxt"/>


    <Button
        android:id="@+id/Quests"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_background"
        android:background="@drawable/arouraicon" />



    <Button
        android:id="@+id/Inventory"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="175dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/basket" />

    <Button
        android:id="@+id/Message"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/messages" />

</RelativeLayout>
