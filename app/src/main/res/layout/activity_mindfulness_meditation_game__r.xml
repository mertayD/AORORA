<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MindfulnessMeditationGame_R"
    android:background="@drawable/background_orange_ring"
    android:id="@+id/meditation_layout">

    <ImageView
        android:id="@+id/most_outer_ring"
        android:layout_width="471dp"
        android:layout_height="725dp"
        android:layout_marginBottom="164dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/orange_ring_1" />

    <ImageView
        android:id="@+id/outer_ring"
        android:layout_width="388dp"
        android:layout_height="428dp"
        android:layout_marginBottom="312dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/orange_ring_2" />

    <ImageView
        android:id="@+id/inner_ring"
        android:layout_width="309dp"
        android:layout_height="297dp"
        android:layout_marginBottom="376dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/orange_ring_3" />

    <ImageView
        android:id="@+id/most_inner_ring"
        android:layout_width="230dp"
        android:layout_height="225dp"
        android:layout_marginBottom="412dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/orange_ring_4" />

    <ImageButton
        android:id="@+id/pause_button_meditations"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="92dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/orange_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ring_pause_button_meditations"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginBottom="72dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/orange_button_ring"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/theme_image"
        android:layout_width="186dp"
        android:layout_height="107dp"
        android:layout_marginBottom="480dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/mountain_feather" />

    <ImageButton
        android:id="@+id/exit_button_meditation_r"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/exit_button_breathing" />

    <ImageView
        android:id="@+id/meditation_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="232dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/orange_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>